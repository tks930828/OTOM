<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h2 class="auth-title">ログイン</h2>
      <p class="auth-subtitle">ログインしてください</p>
    </div>

    <%= form_with(model: resource, scope: resource_name, url: session_path(resource_name), class: "auth-form") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "メールアドレスを入力してください" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "パスワードを入力してください" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group checkbox-group">
          <label class="checkbox-label">
            <%= f.check_box :remember_me, class: "checkbox-input" %>
            <span class="checkbox-text">ログインしたままにする</span>
          </label>
        </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
