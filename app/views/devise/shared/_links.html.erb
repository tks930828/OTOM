<div class="auth-links-container">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "auth-link" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規会員登録", new_registration_path(resource_name), class: "auth-link auth-link-primary" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "auth-link auth-link-secondary" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), class: "auth-link auth-link-secondary" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "アカウントロック解除", new_unlock_path(resource_name), class: "auth-link auth-link-secondary" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "auth-link auth-link-oauth" %>
    <% end %>
  <% end %>
</div>
