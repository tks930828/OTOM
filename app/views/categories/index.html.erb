<h1>カテゴリー一覧</h1>

<div class="mb-3"> # 新規カテゴリー作成ボタン
  <%= link_to '新規カテゴリー作成', new_category_path, class: 'btn btn-primary' %>
</div>

<div class="row"> # カテゴリー一覧を表示
  <% @categories.each do |category| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
          <p class="card-text"><%= category.description %></p>
          <p class="card-text">
            <small class="text-muted">登録書籍数: <%= category.outputs.count %>冊</small>
          </p>
          <div class="btn-group">
            <%= link_to '詳細', category_path(category), class: 'btn btn-info' %>
            <%= link_to '編集', edit_category_path(category), class: 'btn btn-warning' %>
            <%= link_to '削除', category_path(category), 
                method: :delete, 
                data: { confirm: '本当に削除しますか？' }, 
                class: 'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
