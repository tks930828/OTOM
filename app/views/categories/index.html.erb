<h1>カテゴリー一覧</h1>

<div class="mb-3"> 
  <%= link_to '新規カテゴリー作成', new_category_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive"> 
  <table class="table table-striped table-hover"> 
    <thead>
      <tr>
        <th>カテゴリー名</th>
        <th>説明</th>
        <th>登録書籍数</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= category.description %></td>
          <td><%= category.outputs.count %>冊</td>
          <td>
            <div class="btn-group">
              <%= link_to '詳細', category_path(category), class: 'btn btn-info btn-sm' %>
              <%= link_to '編集', edit_category_path(category), class: 'btn btn-warning btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
