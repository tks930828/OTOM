<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card mb-4">
        <div class="card-body">
          <h1 class="card-title"><%= @category.name %></h1>
          <p class="card-text"><%= @category.description %></p>
          <div class="btn-group">
            <%= link_to '編集', edit_category_path(@category), class: 'btn btn-warning' %>
            <%= link_to 'カテゴリー一覧に戻る', categories_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>

      <h2>このカテゴリーの本一覧</h2>
      <% if @outputs.any? %>
        <div class="list-group">
          <% @outputs.each do |output| %>
            <div class="list-group-item">
              <h5 class="mb-1"><%= output.book_name %></h5>
              <p class="mb-1"><%= output.output %></p>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">このカテゴリーにはまだ本が登録されていません。</p>
      <% end %>
    </div>
  </div>
</div>
