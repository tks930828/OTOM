<h1>アウトプット一覧</h1>

<div class="mb-3">
  <%= link_to '新規アウトプット作成', new_output_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive"> 
  <table class="table table-striped table-hover"> 
    <thead>
      <tr>
        <th>本の名前</th>
        <th>カテゴリー</th>
        <th>アウトプット</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @outputs.each do |output| %>
        <tr>
          <td><%= output.book_name %></td>
          <td><%= output.category.name %></td>
          <td><%= truncate(output.output, length: 100) %></td>
          <td>
            <div class="btn-group">
              <%= link_to '詳細', output_path(output), class: 'btn btn-info btn-sm' %>
              <%= link_to '編集', edit_output_path(output), class: 'btn btn-warning btn-sm' %>
              <%= link_to '削除', output_path(output), 
                  method: :delete, 
                  data: { confirm: '本当に削除しますか？' }, 
                  class: 'btn btn-danger btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 