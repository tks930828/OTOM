<h1>アウトプット一覧</h1>

<div class="mb-3">
  <%= link_to '新規アウトプット作成', new_output_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive"> 
  <table class="table table-striped table-hover"> 
    <thead>
      <tr>
        <th>本の名前</th>
        <th>カテゴリー</th>
        <th>アウトプット</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @outputs.each do |output| %>
        <tr>
          <td><%= link_to output_path(output) do %>
            <%= image_tag output.image if output.image.attached? %>
            <p class="caption mb-0"><%= output.book_name %></p>
            <p class="caption"><%= "#{output.comments.count} コメント" %></p> 
          <% end %></td>
          <td><%= output.category.name %></td>
          <td><%= truncate(output.output, length: 100) %></td>
          <td>
            <div class="btn-group">
              <%= link_to '詳細', output_path(output), class: 'btn btn-info btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 